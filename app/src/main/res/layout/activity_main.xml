<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    >
    <FrameLayout android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        android:layout_marginTop="5dp"
        >
        <ImageView android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mute"
            android:onClick="mute"/>

        <ImageView
            android:id="@+id/unmute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="unmute"
            android:src="@drawable/ic_volume"/>
    </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/alphabet"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/newgame"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:color="#771C1C"
            android:text="New Game"
            android:textColor="@color/black"
            android:fontFamily="@font/marko_one"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundTint="#EF80A6"
            />

        <Button
            android:id="@+id/resume"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:color="#771C1C"
            android:text="Resume"
            android:textColor="@color/black"
            android:fontFamily="@font/marko_one"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundTint="#EF80A6"
            android:onClick="resumeMainMenu"/>








    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_podium"
            android:layout_marginRight="100dp"
            android:onClick="openleaderBoard"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat"
            android:onClick="openHelp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            android:id="@+id/exitbtn"/>

    </LinearLayout>

</LinearLayout>
