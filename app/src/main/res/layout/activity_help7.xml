<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help2"
    android:background="@drawable/help_background"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/helpBackgound"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/next7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:textColor="@color/white"
            android:fontFamily="@font/marko_one"
            app:backgroundTint="@color/button"
            android:layout_marginTop="400dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="One more thing, if you mistakenly click any letter, you can delete it..Good luck.."
            android:textSize="25dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/marko_one"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@color/helpBackgound"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/helpBackgound"
            android:gravity="right"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/helpBackgound"/>

</LinearLayout>